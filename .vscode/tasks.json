{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Project",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "clean"
      ],
      "group": "build"
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "assembleDebug"
      ],
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "assembleRelease"
      ],
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ],
      "group": "build"
    },
    {
      "label": "Debug Install",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "installDebug"
      ],
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "label": "Release Install",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "installRelease"
      ],
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "test"
      ],
      "group": "test"
    },
    {
      "label": "Run Android Tests",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "connectedAndroidTest"
      ],
      "group": "test"
    },
    {
      "label": "Lint Check",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "lint"
      ],
      "group": "build"
    }
  ]
}