      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
            }
          ]
        }
      ],
      "group": "build"
    },
    {
      "label": "Launch App on Device",
      "type": "shell",
      "command": "adb",
      "args": [
        "shell",
        "am",
        "start",
        "-n",
        "com.mooncode.mediastream/.MainActivity"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build and Launch",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "assembleDebug",
        "installDebug"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
