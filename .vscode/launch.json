{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "launch",
            "name": "Debug Launch",
            "preLaunchTask": "Build Debug",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "launchActivity": ".MainActivity"
        },
        {
            "type": "android",
            "request": "launch",
            "name": "Release Launch",
            "preLaunchTask": "Build Release",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/release/app-release.apk",
            "launchActivity": ".MainActivity"
        },
        {
            "type": "android",
            "request": "launch", 
            "name": "Debug Install",
            "preLaunchTask": "Debug Install",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "launchActivity": ".MainActivity"
        },
        {
            "type": "android",
            "request": "launch",
            "name": "Release Install",
            "preLaunchTask": "Release Install",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "launchActivity": ".MainActivity"
        },
        {
            "type": "android",
            "request": "attach",
            "name": "Attach to Android Process",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "processId": "${command:pickAndroidProcess}"
        },
        {
            "type": "android",
            "request": "launch",
            "name": "Clean & Debug Launch",
            "preLaunchTask": "Clean Project",
            "appSrcRoot": "${workspaceFolder}/app/src/main/java",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "launchActivity": ".MainActivity"
        }
    ]
}